<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BudgetManager" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/replay_blue_600</item>
        <item name="colorPrimaryVariant">@color/replay_blue_800</item>
        <item name="colorOnPrimary">@color/off_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/replay_orange_500</item>
        <item name="colorSecondaryVariant">@color/replay_orange_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/lato_font</item>
    </style>

    <style name="Theme.BudgetManager.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BudgetManager.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BudgetManager.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="action_item_textview">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">@color/replay_blue_600</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="custom_dialog_edittext" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/dialog_edittext_background</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="custom_dialog_button" >
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">25sp</item>

    </style>

</resources>