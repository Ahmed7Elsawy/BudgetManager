<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BudgetManager" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/replay_blue_600</item>
        <item name="colorPrimaryVariant">@color/replay_blue_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/replay_orange_500</item>
        <item name="colorSecondaryVariant">@color/replay_orange_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BudgetManager.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BudgetManager.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BudgetManager.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="action_item_textview">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">@color/replay_blue_600</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>